{
  "name": "design-token-toolkit",
  "version": "1.1.0-beta.2",
  "description": "ðŸŽ¨ High-performance design token toolkit with ReScript optimization (5-7x faster)",
  "keywords": [
    "design-tokens",
    "rescript",
    "color",
    "accessibility",
    "cli",
    "bun",
    "style-dictionary",
    "performance"
  ],
  "license": "MIT",
  "author": "Antonette Caldwell",
  "type": "module",
  "main": "./dist/src/cli.js",
  "bin": {
    "design-tokens": "./dist/src/cli.js",
    "design-tokens-bun": "./dist/src/cli-bun.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "doc/"
  ],
  "scripts": {
    "benchmark:all": "npm run build && node --expose-gc dist/benchmarks/run-all-benchmarks.js",
    "benchmark:libraries": "npm run build && node --expose-gc dist/benchmarks/color-library-benchmark.js",
    "build": "bun run build:rescript && bun run build:typescript",
    "build:all": "bun run build:cli && bun run build:bun-binary",
    "build:bun-binary": "bun build src/cli-bun.ts --compile --outfile dist/design-tokens-bun --target bun",
    "build:cli": "bun run build && chmod +x dist/src/cli.js dist/src/cli-bun.js",
    "build:rescript": "bun run res:build",
    "build:typescript": "tsc",
    "cli:test": "bun run build:cli && ./dist/src/cli.js --help",
    "cli:test-bun": "bun run build:cli && bun ./dist/src/cli-bun.js --help",
    "prepublishOnly": "bun run build:all",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w"
  },
  "dependencies": {
    "@rescript/core": "1.6.1",
    "color-bits": "^1.1.1",
    "commander": "^14.0.1",
    "culori": "^4.0.2",
    "inquirer": "^12.9.6",
    "ollama": "^0.6.0",
    "path": "^0.12.7",
    "rescript": "11.1.4"
  },
  "devDependencies": {
    "@types/culori": "^4.0.1",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.3.2",
    "style-dictionary": "^5.0.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=16.0.0"
  },
  "preferGlobal": true
}
